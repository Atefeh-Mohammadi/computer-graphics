// glPolygonStipple.cpp : main project file.

//#include "stdafx.h"
#include "stdlib.h"
#include "GL/glut.h"
#include "conio.h"

//points 

int p1[] = { 50, 400 };
int p2[] = { 50, 150 };
int p3[] = { 200, 50 };
int p4[] = { 200, 500 };
int p5[] = { 350, 500 };
int p6[] = { 350, 50 };
int p7[] = { 500, 150 };
int p8[] = { 500, 400 };



GLubyte losange[] = { 
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0x00, 0x00, 0x00, 0x00,
0xcf, 0xff, 0xfd, 0xfe,
0xcf, 0xff, 0xfd, 0xfe,
0xcd, 0x9b, 0x0d, 0xb0,
0xcd, 0x9b, 0x0d, 0xb0,
0xcd, 0x9b, 0x0d, 0xb0,
0xfd, 0xfb, 0xfd, 0xbe,
0xfd, 0xfb, 0xfd, 0xbe,
0x00, 0x03, 0x01, 0x80,
0x00, 0x03, 0x01, 0x80,
0x00, 0x03, 0x01, 0x80,
0x00, 0x73, 0x01, 0x80,
0x00, 0x73, 0x01, 0x80,
0x00, 0x73, 0x01, 0x80,
